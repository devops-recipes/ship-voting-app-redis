apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: ${VOTE_BACK_LABEL}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: ${VOTE_BACK_LABEL}
    spec:
      containers:
      - name: ${VOTE_BACK_LABEL}
        image: ${BACK_IMG_SOURCENAME}:${BACK_IMG_VERSIONNAME}
        ports:
        - containerPort: 6379
          name: redis

---
apiVersion: v1
kind: Service
metadata:
  name: ${VOTE_BACK_LABEL}
spec:
  ports:
  - port: 6379
  selector:
    app: ${VOTE_BACK_LABEL}

---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: ${VOTE_FRONT_LABEL}
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  minReadySeconds: 5
  template:
    metadata:
      labels:
        app: ${VOTE_FRONT_LABEL}
    spec:
      containers:
      - name: ${VOTE_FRONT_LABEL}
        image: ${FRONT_IMG_VERSIONNAME}
        ports:
        - containerPort: 80
        resources:
          requests:
            cpu: 250m
          limits:
            cpu: 500m
        env:
        - name: REDIS
          value: "${VOTE_BACK_LABEL}"

---
apiVersion: v1
kind: Service
metadata:
  name: ${VOTE_FRONT_LABEL}
spec:
  type: LoadBalancer
  ports:
  - port: 80
  selector:
    app: ${VOTE_FRONT_LABEL}
